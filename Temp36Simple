Simple temp code 

\begin{texttt}

    /* 
  Sketch generated by the Arduino IoT Cloud Thing "Untitled"
  https://create.arduino.cc/cloud/things/a499dab5-f32c-4a54-8471-893cc4c30822 

  Arduino IoT Cloud Variables description

  The following variables are automatically generated and updated when changes are made to the Thing

  float temperature;
  int brightness;

  Variables which are marked as READ/WRITE in the Cloud Thing will also have functions
  which are called when their values are changed from the Dashboard.
  These functions are generated with the Thing and added at the end of this sketch.
*/

#include "thingProperties.h"
#include "arduino"

const int ledPin = 2; //PWM PIN
const int tempPin = A1; //TMP PIN
const int ledPin2 = 3; //PWM PIN 2 (For temperature change)

void setup() {
  // Initialize serial and wait for port to open:
  Serial.begin(9600);
  // This delay gives the chance to wait for a Serial Monitor without blocking if none is found
  delay(1500); 

  // Defined in thingProperties.h
  initProperties();

  // Connect to Arduino IoT Cloud
  ArduinoCloud.begin(ArduinoIoTPreferredConnection);
  
  /*
     The following function allows you to obtain more information
     related to the state of network and IoT Cloud connection and errors
     the higher number the more granular information you’ll get.
     The default is 0 (only errors).
     Maximum is 4
 */
  setDebugMessageLevel(2);
  ArduinoCloud.printDebugInfo();
  
  pinMode(ledPin, OUTPUT);
  pinMode(tempPin, INPUT);
  pinMode(ledPin2, OUTPUT); 
}

void loop() {
  ArduinoCloud.update();
  // Your code here 
  analogWrite(ledPin, brightness);
  int raw = analogRead(tempPin);

  float voltage = raw * (3.3 / 1024.0);
  float tempC = (voltage - 0.5) * 100.0;

  temperature = tempC;

  int ledBrightness = map(tempC, 20, 30, 0, 255);  // Adjust 20–35°C to match your environment
  ledBrightness = constrain(ledBrightness, 0, 255);  // Stay in valid PWM range
  analogWrite(ledPin2, ledBrightness);
  
  Serial.print("Raw ADC: ");
  Serial.print(raw);
  Serial.print("  Voltage: ");
  Serial.print(voltage, 3);
  Serial.print(" V  Temperature: ");
  Serial.print(tempC, 2);
  Serial.println(" °C");
  delay(200);
}

void onBrightnessChange() {
  Serial.print("New brightness value: ");
  Serial.println(brightness);
}



\end{texttt}
